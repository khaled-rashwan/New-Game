{% comment %}
  Custom Footer Section - NewGame Board Game Store
  All content is editable from the Shopify theme customizer
{% endcomment %}

<style>
  .custom-footer {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .newsletter-section {
    text-align: center;
    padding: 60px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .newsletter-section h2 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 15px;
    color: {{ section.settings.text_color }};
  }

  .newsletter-section p {
    font-size: 2rem;
    margin-bottom: 30px;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .newsletter-form {
    display: flex;
    gap: 10px;
    max-width: 500px;
    margin: 0 auto 15px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .newsletter-form input[type="email"] {
    flex: 1;
    min-width: 250px;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    font-size: 2rem;
  }

  .newsletter-form button {
    padding: 12px 30px;
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 4px;
    font-size: 2rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .newsletter-form button:hover {
    opacity: 0.9;
  }

  .privacy-text {
    font-size: 1rem;
    opacity: 0.7;
  }

  .footer-main {
    padding: 60px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
  }

  .footer-logo img {
    width: 50px;
    height: 50px;
    border-radius: 8px;
  }

  .logo-text h3 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    color: {{ section.settings.text_color }};
  }

  .logo-text p {
    font-size: 1rem;
    margin: 0;
    opacity: 0.7;
  }

  .footer-description {
    font-size: 1.5rem;
    line-height: 1.6;
    margin-bottom: 25px;
    opacity: 0.85;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.5rem;
    opacity: 0.85;
  }

  .contact-icon {
    width: 20px;
    text-align: center;
  }

  .footer-column h4 {
    font-size: 2.1rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ section.settings.text_color }};
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-links a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.3s;
    font-size: 1.5rem;
  }

  .footer-links a:hover {
    opacity: 1;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 30px 20px;
  }

  .footer-bottom-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .footer-legal {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-wrap: wrap;
  }

  .footer-legal a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    opacity: 0.6;
    font-size: 1rem;
    transition: opacity 0.3s;
  }

  .footer-legal a:hover {
    opacity: 1;
  }

  .copyright {
    font-size: 1.5rem;
    opacity: 0.6;
  }

  .social-icons {
    display: flex;
    gap: 15px;
  }

  .social-icons a {
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.text_color }};
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .social-icons a:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .trust-badges {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 25px 20px;
  }

  .trust-badges-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  @media (max-width: 768px) {
    .newsletter-section h2 {
      font-size: 2.5rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-legal {
      justify-content: center;
    }
  }
</style>

<footer class="custom-footer">
  <!-- Newsletter Section -->
  {% if section.settings.show_newsletter %}
  <div class="newsletter-section">
    <h2>{{ section.settings.newsletter_heading }}</h2>
    <p>{{ section.settings.newsletter_text }}</p>
    
    {% form 'customer', class: 'newsletter-form' %}
      {% if form.posted_successfully? %}
        <p class="success-message">{{ section.settings.success_message }}</p>
      {% endif %}
      
      <input 
        type="email" 
        name="contact[email]" 
        placeholder="{{ section.settings.email_placeholder }}" 
        required
      >
      <button type="submit">{{ section.settings.button_text }}</button>
    {% endform %}
    
    <p class="privacy-text">{{ section.settings.privacy_text }}</p>
  </div>
  {% endif %}

  <!-- Main Footer Content -->
  <div class="footer-main">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <div class="footer-logo">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | img_url: '100x100' }}" alt="{{ shop.name }}">
          {% endif %}
          <div class="logo-text">
            <h3>{{ section.settings.brand_name }}</h3>
            <p>{{ section.settings.brand_tagline }}</p>
          </div>
        </div>
        
        <p class="footer-description">{{ section.settings.brand_description }}</p>
        
        <div class="footer-contact">
          {% if section.settings.phone != blank %}
          <div class="contact-item">
            <span class="contact-icon">üìû</span>
            <span>{{ section.settings.phone }}</span>
          </div>
          {% endif %}
          
          {% if section.settings.email != blank %}
          <div class="contact-item">
            <span class="contact-icon">‚úâÔ∏è</span>
            <span>{{ section.settings.email }}</span>
          </div>
          {% endif %}
          
          {% if section.settings.address != blank %}
          <div class="contact-item">
            <span class="contact-icon">üìç</span>
            <span>{{ section.settings.address }}</span>
          </div>
          {% endif %}
        </div>
      </div>

      <!-- Navigation Columns -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
        <div class="footer-column" {{ block.shopify_attributes }}>
          <h4>{{ block.settings.heading }}</h4>
          <ul class="footer-links">
            {% for i in (1..8) %}
              {% assign link_label = 'link_label_' | append: i %}
              {% assign link_url = 'link_url_' | append: i %}
              {% if block.settings[link_label] != blank %}
                <li>
                  <a href="{{ block.settings[link_url] }}">{{ block.settings[link_label] }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <div class="footer-legal">
        <span class="copyright">{{ section.settings.copyright_text }}</span>
        {% if section.settings.privacy_policy_link != blank %}
          <a href="{{ section.settings.privacy_policy_link }}">Privacy Policy</a>
        {% endif %}
        {% if section.settings.terms_link != blank %}
          <a href="{{ section.settings.terms_link }}">Terms of Service</a>
        {% endif %}
        {% if section.settings.cookie_policy_link != blank %}
          <a href="{{ section.settings.cookie_policy_link }}">Cookie Policy</a>
        {% endif %}
      </div>
      
      <div class="social-icons">
