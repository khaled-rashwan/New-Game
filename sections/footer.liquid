  <!-- Trust Badges -->
  {% if section.settings.show_trust_badges %}
  <div class="trust-badges">
    <div class="trust-badges-content">
      {% for block in section.blocks %}
        {% if block.type == 'trust_badge' %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <span class="badge-dot" style="background-color: {{ block.settings.badge_color }}"></span>
          <span>{{ block.settings.badge_text }}</span>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
</footer>

