.product-name {
  font-size: 18px;
  font-weight: 600;
  margin: 0 0 12px 0;
  line-height: 1.3;
}

.product-name a {
  color: #111827;
  text-decoration: none;
  transition: color 0.2s;
}

.product-name a:hover {
  color: {{ section.settings.button_color }};
}

.product-specs {
  display: flex;
  gap: 16px;
  margin-bottom: 14px;
}

.spec-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 13px;
  color: #6b7280;
  font-weight: 500;
}

.spec-item svg {
  flex-shrink: 0;
}

.product-pricing {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 16px;
  margin-top: auto;
}

.price {
  font-size: 24px;
  font-weight: 700;
  color: #111827;
}