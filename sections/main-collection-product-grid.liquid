{% comment %}
  Collection Template with Filters - Fully Editable in Shopify
  Save this as: sections/collection-with-filters.liquid
{% endcomment %}

<div class="board-games-collection">
  <div class="collection-container">
    
    <!-- Header Section -->
    <div class="collection-header">
      <h1 class="collection-title">{{ section.settings.page_title }}</h1>
      <p class="collection-subtitle">{{ section.settings.page_subtitle }}</p>
    </div>

    <!-- Search and Category Tabs -->
    <div class="collection-controls">
      <div class="search-wrapper">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        <input type="text" id="searchInput" placeholder="{{ section.settings.search_placeholder }}" class="search-input" />
      </div>

      <div class="category-tabs">
        <button class="category-tab active" data-category="all">{{ section.settings.tab_all }}</button>
        <button class="category-tab" data-category="strategy">{{ section.settings.tab_strategy }}</button>
        <button class="category-tab" data-category="family">{{ section.settings.tab_family }}</button>
        <button class="category-tab" data-category="cooperative">{{ section.settings.tab_cooperative }}</button>
        <button class="category-tab" data-category="abstract">{{ section.settings.tab_abstract }}</button>
        <button class="category-tab" data-category="party">{{ section.settings.tab_party }}</button>
        <button class="category-tab" data-category="card">{{ section.settings.tab_card }}</button>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
      
      <!-- Filters Sidebar -->
      <aside class="filters-sidebar">
        <div class="filters-header">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="4" y1="21" x2="4" y2="14"></line>
            <line x1="4" y1="10" x2="4" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12" y2="3"></line>
            <line x1="20" y1="21" x2="20" y2="16"></line>
            <line x1="20" y1="12" x2="20" y2="3"></line>
            <line x1="1" y1="14" x2="7" y2="14"></line>
            <line x1="9" y1="8" x2="15" y2="8"></line>
            <line x1="17" y1="16" x2="23" y2="16"></line>
          </svg>
          <h3>{{ section.settings.filters_title }}</h3>
        </div>

        <!-- Price Range -->
        <div class="filter-section">
          <h4 class="filter-title">{{ section.settings.price_filter_title }}</h4>
          <div class="price-range">
            <input type="range" id="priceRange" class="price-slider" min="0" max="100" value="0" />
            <div class="price-labels">
              <span>$0</span>
              <span>$100+</span>
            </div>
          </div>
        </div>

        <!-- Complexity -->
        {% if section.settings.show_complexity %}
        <div class="filter-section">
          <h4 class="filter-title">{{ section.settings.complexity_title }}</h4>
          <label class="filter-checkbox">
            <input type="checkbox" name="complexity" value="easy" />
            <span>Easy</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="complexity" value="medium" />
            <span>Medium</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="complexity" value="hard" />
            <span>Hard</span>
          </label>
        </div>
        {% endif %}

        <!-- Age -->
        {% if section.settings.show_age %}
        <div class="filter-section">
          <h4 class="filter-title">{{ section.settings.age_title }}</h4>
          <label class="filter-checkbox">
            <input type="checkbox" name="age" value="6+" />
            <span>6+</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="age" value="8+" />
            <span>8+</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="age" value="10+" />
            <span>10+</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="age" value="12+" />
            <span>12+</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="age" value="14+" />
            <span>14+</span>
          </label>
        </div>
        {% endif %}

        <!-- Language -->
        {% if section.settings.show_language %}
        <div class="filter-section">
          <h4 class="filter-title">{{ section.settings.language_title }}</h4>
          <label class="filter-checkbox">
            <input type="checkbox" name="language" value="english" />
            <span>English</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="language" value="french" />
            <span>French</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="language" value="spanish" />
            <span>Spanish</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="language" value="german" />
            <span>German</span>
          </label>
        </div>
        {% endif %}

        <!-- Availability -->
        {% if section.settings.show_availability %}
        <div class="filter-section">
          <h4 class="filter-title">{{ section.settings.availability_title }}</h4>
          <label class="filter-checkbox">
            <input type="checkbox" name="availability" value="in-stock" />
            <span>In Stock</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="availability" value="low-stock" />
            <span>Low Stock</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="availability" value="pre-order" />
            <span>Pre-order</span>
          </label>
          <label class="filter-checkbox">
            <input type="checkbox" name="availability" value="out-of-stock" />
            <span>Out of Stock</span>
          </label>
        </div>
        {% endif %}

        <button class="clear-all-btn">{{ section.settings.clear_filters_text }}</button>
      </aside>

      <!-- Products Area -->
      <div class="products-wrapper">
        
        <!-- Products Header -->
        <div class="products-header">
          <p class="products-count">{{ collection.products_count }} games found</p>
          
          <div class="header-controls">
            <div class="view-toggle">
              <button class="view-btn active" data-view="grid" aria-label="Grid view">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                  <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                  <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                  <rect x="14" y="14" width="7" height="7" rx="1"></rect>
                </svg>
              </button>
              <button class="view-btn" data-view="list" aria-label="List view">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="8" y1="6" x2="21" y2="6"></line>
                  <line x1="8" y1="12" x2="21" y2="12"></line>
                  <line x1="8" y1="18" x2="21" y2="18"></line>
                  <line x1="3" y1="6" x2="3.01" y2="6"></line>
                  <line x1="3" y1="12" x2="3.01" y2="12"></line>
                  <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
              </button>
            </div>

            <select class="sort-dropdown" id="sortDropdown">
              <option value="popularity">Popularity</option>
              <option value="price-asc">Price: Low to High</option>
              <option value="price-desc">Price: High to Low</option>
              <option value="rating">Rating</option>
              <option value="newest">Newest</option>
            </select>
          </div>
        </div>

        <!-- Products Grid -->
        <div class="products-grid" id="productsGrid">
          {% for product in collection.products %}
          <div class="product-card" 
               data-price="{{ product.price | money_without_currency | remove: ',' | remove: ' ' }}"
               data-tags="{{ product.tags | join: ',' | downcase }}"
               data-rating="{{ product.metafields.custom.rating | default: 4.5 }}">
            
            <!-- Badges -->
            <div class="product-badges">
              {% if product.tags contains 'new' or product.tags contains 'New' %}
                <span class="badge badge-new">New</span>
              {% endif %}
              {% if product.compare_at_price > product.price %}
                <span class="badge badge-sale">Sale</span>
              {% endif %}
            </div>

            <!-- Wishlist -->
            <button class="wishlist-btn" aria-label="Add to wishlist">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
              </svg>
            </button>

            <!-- Image -->
            <a href="{{ product.url }}" class="product-link">
              <div class="product-image">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '500x' }}" 
                       alt="{{ product.title }}" 
                       width="500"
                       height="500"
                       loading="lazy" />
                {% else %}
                  <div class="image-placeholder">
                    <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                      <circle cx="8.5" cy="8.5" r="1.5"></circle>
                      <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                  </div>
                {% endif %}
                
                <!-- Stock Badge -->
                {% if product.available %}
                  {% assign inventory = product.selected_or_first_available_variant.inventory_quantity %}
                  {% if inventory > 10 or inventory == blank %}
                    <span class="stock-badge in-stock">In Stock</span>
                  {% elsif inventory > 0 %}
                    <span class="stock-badge low-stock">Low Stock</span>
                  {% endif %}
                {% else %}
                  <span class="stock-badge out-stock">Out of Stock</span>
                {% endif %}
              </div>
            </a>

            <!-- Info -->
            <div class="product-content">
              <div class="product-meta">
                {% assign first_tag = product.tags | first %}
                {% if first_tag %}
                  <span class="product-type">{{ first_tag }}</span>
                {% endif %}
                <div class="product-rating">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="#FFC107" stroke="none">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                  </svg>
                  <span>{{ product.metafields.custom.rating | default: 4.5 }}</span>
                </div>
              </div>

              <h3 class="product-name">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="product-specs">
                <span class="spec-item">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                  {{ product.metafields.custom.players | default: '2-4' }}
                </span>
                <span class="spec-item">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {{ product.metafields.custom.playtime | default: '30-60 min' }}
                </span>
              </div>

              <div class="product-pricing">
                {% if product.compare_at_price > product.price %}
                  <span class="price">{{ product.price | money }}</span>
                  <span class="compare-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price">{{ product.price | money }}</span>
                {% endif %}
              </div>

              <button class="add-cart-btn" onclick="addToCart({{ product.variants.first.id }})">
                {{ section.settings.add_to_cart_text }}
              </button>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

