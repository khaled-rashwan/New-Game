{{ 'section-cta-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cta-banner-{{ section.id }} {
    background: {{ section.settings.gradient_start }};
    background: linear-gradient(135deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);
  }

  .cta-banner-{{ section.id }} .cta-banner__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .cta-banner-{{ section.id }} .cta-banner__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }
  }

  .cta-banner-{{ section.id }} .cta-banner__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .cta-banner-{{ section.id }} .cta-banner__text {
      font-size: {{ section.settings.text_size_desktop }}px;
    }
  }

  .cta-banner-{{ section.id }} .cta-banner__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    font-size: {{ section.settings.button_text_size }}px;
    border-radius: {{ section.settings.button_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  }

  .cta-banner-{{ section.id }} .cta-banner__button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
  }

  .cta-banner-{{ section.id }} .cta-banner__button--secondary {
    background-color: {{ section.settings.button_secondary_bg_color }};
    color: {{ section.settings.button_secondary_text_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_secondary_border_color }};
  }

  .cta-banner-{{ section.id }} .cta-banner__button--secondary:hover {
    background-color: {{ section.settings.button_secondary_hover_bg_color }};
    color: {{ section.settings.button_secondary_hover_text_color }};
  }
{%- endstyle -%}

<section class="cta-banner cta-banner-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="cta-banner__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="cta-banner__heading">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <p class="cta-banner__text">
          {{ section.settings.text }}
        </p>
      {%- endif -%}
      
      <div class="cta-banner__buttons">
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="cta-banner__button button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 }}" class="cta-banner__button cta-banner__button--secondary button">
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

