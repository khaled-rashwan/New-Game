{% comment %}
  About Page - Our Journey Timeline Section
  Save as: sections/about-timeline.liquid
{% endcomment %}

<div class="about-timeline">
  <div class="timeline-container">
    <div class="timeline-header">
      <h2 class="section-title">{{ section.settings.timeline_title }}</h2>
      <p class="section-subtitle">{{ section.settings.timeline_subtitle }}</p>
    </div>

    <div class="timeline-track">
      <div class="timeline-line"></div>
      
      {% for block in section.blocks %}
        {% assign index_mod = forloop.index0 | modulo: 2 %}
        <div class="timeline-item {% if forloop.index == 1 %}active{% endif %} {% if index_mod == 0 %}left{% else %}right{% endif %}">
          <div class="timeline-content">
            <div class="timeline-year">{{ block.settings.year }}</div>
            <h3 class="timeline-event">{{ block.settings.event }}</h3>
            <p class="timeline-description">{{ block.settings.description }}</p>
          </div>
          <div class="timeline-dot"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.about-timeline {
  background: #f9fafb;
  padding: 80px 24px;
}

.timeline-container {
  max-width: 1000px;
  margin: 0 auto;
}

.timeline-header {
  text-align: center;
  margin-bottom: 80px;
}

.section-title {
  font-size: 32px;
  font-weight: 700;
  color: #111827;
  margin: 0 0 16px 0;
  letter-spacing: -0.5px;
}

.section-subtitle {
  font-size: 18px;
  color: #6b7280;
  margin: 0;
  line-height: 1.6;
}

.timeline-track {
  position: relative;
  padding: 40px 0;
}

.timeline-line {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 3px;
  background: #e5e7eb;
  transform: translateX(-50%);
}

.timeline-item {
  position: relative;
  margin-bottom: 60px;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 0;
}

.timeline-item.left .timeline-content {
  grid-column: 1;
  text-align: right;
  padding-right: 40px;
}

.timeline-item.right .timeline-content {
  grid-column: 3;
  text-align: left;
  padding-left: 40px;
}

.timeline-dot {
  grid-column: 2;
  width: 20px;
  height: 20px;
  background: white;
  border: 4px solid #ff6b35;
  border-radius: 50%;
  z-index: 2;
  position: relative;
  transition: all 0.3s ease;
}

.timeline-item:hover .timeline-dot {
  transform: scale(1.3);
  box-shadow: 0 0 0 8px rgba(255, 107, 53, 0.1);
}

.timeline-content {
  background: white;
  padding: 24px;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  transition: all 0.3s ease;
}

.timeline-item:hover .timeline-content {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  border-color: #d1d5db;
  transform: translateY(-4px);
}

.timeline-year {
  display: inline-block;
  font-size: 14px;
  font-weight: 700;
  color: #ff6b35;
  background: #fff7ed;
  padding: 6px 12px;
  border-radius: 6px;
  margin-bottom: 12px;
}

.timeline-event {
  font-size: 20px;
  font-weight: 600;
  color: #111827;
  margin: 0 0 8px 0;
}

.timeline-description {
  font-size: 15px;
  color: #6b7280;
  line-height: 1.6;
  margin: 0;
}

@media (max-width: 768px) {
  .about-timeline {
    padding: 60px 20px;
  }

  .timeline-line {
    left: 20px;
  }

  .timeline-item {
    grid-template-columns: auto 1fr;
    gap: 0;
  }

  .timeline-item.left .timeline-content,
  .timeline-item.right .timeline-content {
    grid-column: 2;
    text-align: left;
    padding-left: 40px;
    padding-right: 0;
  }

  .timeline-dot {
    grid-column: 1;
    margin-left: 11px;
  }

  .section-title {
    font-size: 28px;
  }
}
</style>

{% schema %}
{
  "name": "About Timeline",
  "settings": [
    {
      "type": "text",
      "id": "timeline_title",
      "label": "Section Title",
      "default": "Our Journey"
    },
    {
      "type": "textarea",
      "id": "timeline_subtitle",
      "label": "Section Subtitle",
      "default": "Key milestones in our mission to bring amazing board games to everyone"
    }
  ],
  "blocks": [
    {
      "type": "milestone",
      "name": "Timeline Milestone",
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "2005"
        },
        {
          "type": "text",
          "id": "event",
          "label": "Event Title",
          "default": "NewGame Founded"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Started as a small local game store with a passion for bringing people together."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Timeline",
      "blocks": [
        {
          "type": "milestone",
          "settings": {
            "year": "2005",
            "event": "NewGame Founded",
            "description": "Started as a small local game store with a passion for bringing people together."
          }
        },
        {
          "type": "milestone",
          "settings": {
            "year": "2012",
