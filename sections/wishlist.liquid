{% comment %}
  Enhanced Wishlist Page
  Matches the board game store design with stats, search, filters, and sorting
{% endcomment %}

<style>
  .wishlist-page {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px 20px;
  }

  /* Header with Back Button */
  .wishlist-header {
    margin-bottom: 40px;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: transparent;
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px;
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 20px;
    transition: all 0.3s;
  }

  .back-button:hover {
    background: {{ section.settings.hover_bg }};
    border-color: {{ section.settings.primary_color }};
  }

  .back-button svg {
    width: 16px;
    height: 16px;
  }

  .wishlist-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 8px;
  }

  .wishlist-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.text_secondary }};
    margin: 0;
  }

  /* Stats Cards */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .stat-card {
    background: {{ section.settings.card_bg }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.card_radius }}px;
    padding: 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .stat-info h3 {
    font-size: 13px;
    color: {{ section.settings.text_secondary }};
    margin: 0 0 8px;
    font-weight: 500;
  }

  .stat-value {
    font-size: 28px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
  }

  .icon-heart {
    background: #ffebee;
    color: #d32f2f;
  }

  .icon-cart {
    background: #e8f5e9;
    color: #4caf50;
  }

  .icon-sale {
    background: #fff3e0;
  }

  .sale-dot {
    width: 24px;
    height: 24px;
    background: #ff6b35;
    border-radius: 50%;
  }

  /* Search and Filters */
  .controls-bar {
    background: {{ section.settings.card_bg }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.card_radius }}px;
    padding: 20px;
    margin-bottom: 30px;
    display: flex;
    gap: 15px;
    align-items: center;
    flex-wrap: wrap;
  }

  .search-box {
    flex: 1;
    min-width: 250px;
    position: relative;
  }

  .search-box input {
    width: 100%;
    padding: 12px 12px 12px 40px;
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px;
    font-size: 14px;
    color: {{ section.settings.text_color }};
  }

  .search-box svg {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
    color: {{ section.settings.text_secondary }};
  }

  .filter-button, .sort-select {
    padding: 12px 20px;
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px;
    background: {{ section.settings.card_bg }};
    color: {{ section.settings.text_color }};
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .filter-button:hover, .sort-select:hover {
    border-color: {{ section.settings.primary_color }};
  }

  .filter-button svg, .sort-select svg {
    width: 16px;
    height: 16px;
  }

  /* Wishlist Grid */
  .wishlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: 50px;
  }

  .wishlist-item {
    background: {{ section.settings.card_bg }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.card_radius }}px;
    overflow: hidden;
    transition: all 0.3s;
    position: relative;
  }

  .wishlist-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  /* Product Badges */
  .product-badges {
    position: absolute;
    top: 12px;
    left: 12px;
    right: 12px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    z-index: 10;
  }

  .badge {
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .badge-sale {
    background: #ef5350;
    color: #ffffff;
  }

  .badge-out-of-stock {
    background: #f5f5f5;
    color: #666666;
  }

  .remove-button {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
  }

  .remove-button:hover {
    background: #ffebee;
  }

  .remove-button svg {
    width: 18px;
    height: 18px;
    stroke: #d32f2f;
  }

  /* Product Image */
  .wishlist-item-image {
    position: relative;
    width: 100%;
    padding-top: 100%;
    background: #f5f5f5;
    overflow: hidden;
  }

  .wishlist-item-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Product Content */
  .wishlist-item-content {
    padding: 20px;
  }

  .product-title {
    font-size: {{ section.settings.product_title_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .product-title a {
    color: inherit;
    text-decoration: none;
  }

  .product-title a:hover {
    color: {{ section.settings.primary_color }};
  }

  .product-category {
    display: inline-block;
    padding: 4px 10px;
    background: #f5f5f5;
    border-radius: 4px;
    font-size: 12px;
    color: {{ section.settings.text_secondary }};
    margin-bottom: 12px;
  }

  /* Product Meta */
  .product-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    color: {{ section.settings.text_secondary }};
  }

  .meta-item svg {
    width: 16px;
    height: 16px;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .star {
    color: #ffa726;
    font-size: 14px;
  }

  .rating-value {
    font-weight: 600;
    color: {{ section.settings.text_color }};
    font-size: 14px;
  }

  /* Price */
  .product-price {
    margin-bottom: 16px;
  }

  .price-main {
    font-size: {{ section.settings.price_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
  }

  .price-compare {
    font-size: 16px;
    color: {{ section.settings.text_secondary }};
    text-decoration: line-through;
    margin-left: 8px;
  }

  /* Add to Cart Button */
  .add-to-cart-btn {
    width: 100%;
    padding: 14px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .add-to-cart-btn:hover:not(:disabled) {
    background: {{ section.settings.button_hover }};
    transform: translateY(-2px);
  }

  .add-to-cart-btn:disabled {
    background: #e0e0e0;
    color: #9e9e9e;
    cursor: not-allowed;
  }

  .add-to-cart-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Empty State */
  .wishlist-empty {
    text-align: center;
    padding: 80px 20px;
    display: none;
  }

  .wishlist-empty.active {
    display: block;
  }

  .wishlist-empty svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .wishlist-empty h2 {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 12px;
  }

  .wishlist-empty p {
    font-size: 16px;
    color: {{ section.settings.text_secondary }};
    margin: 0 0 24px;
  }

  .shop-now-btn {
    display: inline-block;
    padding: 14px 32px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
  }

  .shop-now-btn:hover {
    background: {{ section.settings.button_hover }};
  }

  /* Loading */
  .wishlist-loading {
    text-align: center;
    padding: 60px 20px;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid {{ section.settings.primary_color }};
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 20px;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .controls-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .search-box {
      min-width: 100%;
    }

    .wishlist-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 15px;
    }

    .wishlist-item-content {
      padding: 15px;
    }
  }
</style>

<div class="wishlist-page">
  <!-- Header -->
  <div class="wishlist-header">
    {% if section.settings.show_back_button %}
    <a href="{{ section.settings.back_link }}" class="back-button">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      {{ section.settings.back_text }}
    </a>
    {% endif %}
    <h1 class="wishlist-title">{{ section.settings.page_title }}</h1>
    <p class="wishlist-subtitle">{{ section.settings.page_subtitle }}</p>
  </div>

  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-info">
        <h3>Total Items</h3>
        <p class="stat-value" id="total-items">0</p>
      </div>
      <div class="stat-icon icon-heart">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-info">
        <h3>Total Value</h3>
        <p class="stat-value" id="total-value">$0.00</p>
      </div>
      <div class="stat-icon icon-cart">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 2L11 8H22L19 14H10L8 20H18"/>
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="18" cy="21" r="1"></circle>
        </svg>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-info">
        <h3>Items on Sale</h3>
        <p class="stat-value" id="items-on-sale">0</p>
      </div>
      <div class="stat-icon icon-sale">
        <div class="sale-dot"></div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="controls-bar">
    <div class="search-box">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input type="text" id="wishlist-search" placeholder="Search wishlist...">
    </div>

    <button class="filter-button" onclick="toggleFilters()">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
      </svg>
      All...
    </button>

    <select class="sort-select" id="sort-select" onchange="sortWishlist()">
      <option value="newest">Newest First</option>
      <option value="oldest">Oldest First</option>
      <option value="price-low">Price: Low to High</option>
      <option value="price-high">Price: High to Low</option>
      <option value="name-az">Name: A-Z</option>
      <option value="name-za">Name: Z-A</option>
    </select>
  </div>

  <!-- Loading -->
  <div class="wishlist-loading" id="wishlist-loading">
    <div class="spinner"></div>
    <p>Loading your wishlist...</p>
  </div>

  <!-- Wishlist Grid -->
  <div class="wishlist-grid" id="wishlist-grid"></div>

  <!-- Empty State -->
  <div class="wishlist-empty" id="wishlist-empty">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg>
    <h2>{{ section.settings.empty_title }}</h2>
    <p>{{ section.settings.empty_subtitle }}</p>
    <a href="{{ section.settings.shop_link }}" class="shop-now-btn">
      {{ section.settings.shop_button_text }}
    </a>
  </div>
</div>

<script>
(function() {
  const WishlistManager = {
    storageKey: 'newgame_wishlist',
    
    getWishlist: function() {
      const wishlist = localStorage.getItem(this.storageKey);
      return wishlist ? JSON.parse(wishlist) : [];
    },
    
    removeFromWishlist: function(productId) {
      let wishlist = this.getWishlist();
      wishlist = wishlist.filter(item => item.id !== productId);
      localStorage.setItem(this.storageKey, JSON.stringify(wishlist));
      return wishlist;
    },
    
    addToCart: function(variantId, quantity = 1) {
      return fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          items: [{ id: variantId, quantity: quantity }]
        })
      }).then(response => response.json());
    }
  };

  function loadWishlist() {
    const loading = document.getElementById('wishlist-loading');
    const grid = document.getElementById('wishlist-grid');
    const empty = document.getElementById('wishlist-empty');
    
    loading.style.display = 'block';
    grid.style.display = 'none';
    empty.classList.remove('active');
    
    const wishlist = WishlistManager.getWishlist();
    
    updateStats(wishlist);
    
    if (wishlist.length === 0) {
      loading.style.display = 'none';
      empty.classList.add('active');
      return;
    }
    
    const productIds = wishlist.map(item => item.id).join(',');
    
    fetch(`/products.json?ids=${productIds}`)
      .then(response => response.json())
      .then(data => {
        loading.style.display = 'none';
        grid.style.display = 'grid';
        
        if (!data.products || data.products.length === 0) {
          empty.classList.add('active');
          return;
        }
        
        renderProducts(data.products);
      })
      .catch(error => {
        console.error('Error:', error);
        loading.style.display = 'none';
        empty.classList.add('active');
      });
  }

  function renderProducts(products) {
    const grid = document.getElementById('wishlist-grid');
    
    grid.innerHTML = products.map(product => {
      const variant = product.variants[0];
      const comparePrice = variant.compare_at_price;
      const price = variant.price;
      const available = variant.available;
      const onSale = comparePrice && comparePrice > price;
      
      return `
        <div class="wishlist-item" data-product-id="${product.id}" data-price="${price}" data-name="${product.title}">
          <div class="product-badges">
            <div>
              ${onSale ? '<span class="badge badge-sale">Sale</span>' : ''}
              ${!available ? '<span class="badge badge-out-of-stock">Out of Stock</span>' : ''}
            </div>
            <button class="remove-button" onclick="removeItem(${product.id})" title="Remove">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
            </button>
          </div>
          
          <div class="wishlist-item-image">
            <img src="${product.featured_image || '/cdn/shop/files/placeholder.png'}" 
                 alt="${product.title}"
                 loading="lazy">
          </div>
          
          <div class="wishlist-item-content">
            <h3 class="product-title">
              <a href="${product.url}">${product.title}</a>
            </h3>
            
            ${product.product_type ? `<span class="product-category">${product.product_type}</span>` : ''}
            
            <div class="product-meta">
              <span class="meta-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                1-4
              </span>
              <span class="meta-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                60-120 min
              </span>
              <div class="product-rating">
                <span class="star">â˜…</span>
                <span class="rating-value">4.8</span>
              </div>
            </div>
            
            <div class="product-price">
              <span class="price-main">${formatMoney(price)}</span>
              ${comparePrice ? `<span class="price-compare">${formatMoney(comparePrice)}</span>` : ''}
            </div>
            
            <button class="add-to-cart-btn" 
                    onclick="addToCartFromWishlist(${variant.id}, ${product.id})"
                    ${!available ? 'disabled' : ''}>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
              </svg>
              ${available ? 'Add to Cart' : 'Out of Stock'}
            </button>
          </div>
        </div>
      `;
    }).join('');
  }

  function updateStats(wishlist) {
    const totalItems = wishlist.length;
    let totalValue = 0;
    let itemsOnSale = 0;
    
    wishlist.forEach(item => {
      totalValue += (item.price || 0);
    });
    
    document.getElementById('total-items').textContent = totalItems;
    document.getElementById('total-value').textContent = '$' + (totalValue / 100).toFixed(2);
    document.getElementById('items-on-sale').textContent = itemsOnSale;
  }

  function formatMoney(cents) {
    return '$' + (cents / 100).toFixed(2);
  }

  window.removeItem = function(productId) {
    WishlistManager.removeFromWishlist(productId);
    const item = document.querySelector(`[data-product-id="${productId}"]`);
    if (item) {
      item.style.opacity = '0';
      item.style.transform = 'scale(0.9)';
      setTimeout(() => {
        item.remove();
        const wishlist = WishlistManager.getWishlist();
        updateStats(wishlist);
        if (wishlist.length === 0) {
          document.getElementById('wishlist-grid').style.display = 'none';
          document.getElementById('wishlist-empty').classList.add('active');
        }
      }, 300);
    }
    if (typeof updateWishlistCount === 'function') updateWishlistCount();
  };

  window.addToCartFromWishlist = function(variantId, productId) {
    const button = event.target;
    const originalText = button.innerHTML;
    button.disabled = true;
    button.innerHTML = '<span>Adding...</span>';
    
    WishlistManager.addToCart(variantId)
      .then(() => {
        button.innerHTML = '<span>Added!</span>';
        if (typeof updateCartCount === 'function') updateCartCount();
        setTimeout(() => {
          {% if section.settings.remove_after_add %}
          removeItem(productId);
          {% else %}
          button.innerHTML = originalText;
          button.disabled = false;
          {% endif %}
        }, 1500);
      })
      .catch(error => {
        console.error('Error:', error);
        button.innerHTML = '<span>Error</span>';
        setTimeout(() => {
          button.innerHTML = originalText;
          button.disabled = false;
        }, 2000);
      });
  };

  // Search functionality
  document.getElementById('wishlist-search')?.addEventListener('input', function(e) {
    const query = e.target.value.toLowerCase();
    document.querySelectorAll('.wishlist-item').forEach(item => {
      const name = item.dataset.name.toLowerCase();
      item.style.display = name.includes(query) ? 'block' : 'none';
    });
  });

  // Sort functionality
  window.sortWishlist = function() {
    const sortValue = document.getElementById('sort-select').value;
    const grid = document.getElementById('wishlist-grid');
    const items = Array.from(grid.children);
    
    items.sort((a, b) => {
      const priceA = parseInt(a.dataset.price);
      const priceB = parseInt(b.dataset.price);
      const nameA = a.dataset.name;
      const nameB = b.dataset.name;
      
      switch(sortValue) {
        case 'price-low': return priceA - priceB;
        case 'price-high': return priceB - priceA;
        case 'name-az': return nameA.localeCompare(nameB);
        case 'name-za': return nameB.localeCompare(nameA);
        default: return 0;
      }
    });
    
    items.forEach(item => grid.appendChild(item));
  };

