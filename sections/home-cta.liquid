{% comment %}
  Homepage - CTA Section
  Save as: sections/home-cta.liquid
{% endcomment %}

<div class="home-cta">
  <div class="cta-container">
    <h2 class="cta-title">{{ section.settings.title }}</h2>
    <p class="cta-subtitle">{{ section.settings.subtitle }}</p>

    <div class="cta-buttons">
      {% if section.settings.show_primary_button %}
        <a href="{{ section.settings.primary_link }}" class="cta-btn primary">
          {{ section.settings.primary_text }}
        </a>
      {% endif %}

      {% if section.settings.show_secondary_button %}
        <a href="{{ section.settings.secondary_link }}" class="cta-btn secondary">
          {{ section.settings.secondary_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.home-cta {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 50%, #e83e8c 100%);
  padding: 100px 24px;
  position: relative;
  overflow: hidden;
}

.home-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.cta-container {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
  position: relative;
  z-index: 1;
}

.cta-title {
  font-size: 42px;
  font-weight: 700;
  color: white;
  margin: 0 0 16px 0;
  letter-spacing: -0.5px;
  line-height: 1.2;
}

.cta-subtitle {
  font-size: 18px;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.7;
  margin: 0 0 40px 0;
}

.cta-buttons {
  display: flex;
  justify-content: center;
  gap: 16px;
  flex-wrap: wrap;
}

.cta-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16px 32px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.cta-btn.primary {
  background: white;
  color: #ff6b35;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.cta-btn.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.cta-btn.secondary {
  background: transparent;
  color: white;
  border: 2px solid white;
}

.cta-btn.secondary:hover {
  background: rgba(255, 255, 255, 0.1);
}

@media (max-width: 768px) {
  .home-cta {
    padding: 80px 20px;
  }

  .cta-title {
    font-size: 32px;
  }

  .cta-subtitle {
    font-size: 16px;
  }

  .cta-buttons {
    flex-direction: column;
    align-items: center;
  }

  .cta-btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>

{% schema %}
{
  "name": "Home CTA",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ready to Start Your Gaming Journey?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover amazing games, join our community events, and create unforgettable memories with friends and family."
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "checkbox",
      "id": "show_primary_button",
      "label": "Show Primary Button",
      "default": true
    },
    {
      "type": "text",
      "id": "primary_text",
      "label": "Button Text",
      "default": "Start Shopping"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_button",
      "label": "Show Secondary Button",
      "default": true
    },
    {
      "type": "text",
      "id": "secondary_text",
      "label": "Button Text",
      "default": "Join an Event"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Home CTA"
    }
  ]
}
{% endschema %}