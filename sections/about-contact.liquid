{% comment %}
  About Page - Get in Touch Section
  Save as: sections/about-contact.liquid
{% endcomment %}

<div class="about-contact">
  <div class="contact-container">
    <div class="contact-header">
      <h2 class="section-title">{{ section.settings.contact_title }}</h2>
      <p class="section-subtitle">{{ section.settings.contact_subtitle }}</p>
    </div>

    <div class="contact-methods">
      <div class="contact-card">
        <div class="contact-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#3b82f6" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <h3 class="contact-method-title">{{ section.settings.visit_title }}</h3>
        <p class="contact-info">{{ section.settings.store_address }}</p>
      </div>

      <div class="contact-card">
        <div class="contact-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
        </div>
        <h3 class="contact-method-title">{{ section.settings.call_title }}</h3>
        <p class="contact-info">{{ section.settings.phone_number }}</p>
        <p class="contact-sub">{{ section.settings.phone_hours }}</p>
      </div>

      <div class="contact-card">
        <div class="contact-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#8b5cf6" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <h3 class="contact-method-title">{{ section.settings.email_title }}</h3>
        <p class="contact-info">{{ section.settings.email_address }}</p>
        <p class="contact-sub">{{ section.settings.email_response }}</p>
      </div>
    </div>

    {% if section.settings.show_cta_button %}
      <div class="contact-cta">
        <a href="{{ section.settings.cta_link }}" class="cta-button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.about-contact {
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  padding: 80px 24px;
}

.contact-container {
  max-width: 1200px;
  margin: 0 auto;
}

.contact-header {
  text-align: center;
  margin-bottom: 60px;
}

.section-title {
  font-size: 32px;
  font-weight: 700;
  color: #111827;
  margin: 0 0 16px 0;
  letter-spacing: -0.5px;
}

.section-subtitle {
  font-size: 18px;
  color: #6b7280;
  margin: 0;
  line-height: 1.6;
}

.contact-methods {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32px;
  margin-bottom: 48px;
}

.contact-card {
  background: white;
  padding: 40px 32px;
  border-radius: 16px;
  text-align: center;
  border: 1px solid #e5e7eb;
  transition: all 0.3s ease;
}

.contact-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
  border-color: #d1d5db;
}

.contact-icon {
  width: 72px;
  height: 72px;
  margin: 0 auto 24px;
  background: #f9fafb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-method-title {
  font-size: 20px;
  font-weight: 600;
  color: #111827;
  margin: 0 0 12px 0;
}

.contact-info {
  font-size: 16px;
  color: #374151;
  line-height: 1.6;
  margin: 0 0 8px 0;
  font-weight: 500;
}

.contact-sub {
  font-size: 14px;
  color: #9ca3af;
  margin: 0;
}

.contact-cta {
  text-align: center;
}

.cta-button {
  display: inline-block;
  padding: 16px 40px;
  background: #000;
  color: white;
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  border-radius: 8px;
  transition: all 0.2s;
}

.cta-button:hover {
  background: #1f2937;
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

@media (max-width: 992px) {
  .contact-methods {
    grid-template-columns: 1fr;
    gap: 24px;
  }
}

@media (max-width: 768px) {
  .about-contact {
    padding: 60px 20px;
  }
  
  .section-title {
    font-size: 28px;
  }
  
  .contact-card {
    padding: 32px 24px;
  }
}
</style>

{% schema %}
{
  "name": "About Contact",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Section Title",
      "default": "Get in Touch"
    },
    {
      "type": "textarea",
      "id": "contact_subtitle",
      "label": "Section Subtitle",
      "default": "Have questions or want to learn more? We'd love to hear from you"
    },
    {
      "type": "header",
      "content": "Visit Our Store"
    },
    {
      "type": "text",
      "id": "visit_title",
      "label": "Visit Title",
      "default": "Visit Our Store"
    },
    {
      "type": "textarea",
      "id": "store_address",
      "label": "Store Address",
      "default": "123 Gaming Street\nYour City, State 12345"
    },
    {
      "type": "header",
      "content": "Call Us"
    },
    {
      "type": "text",
      "id": "call_title",
      "label": "Call Title",
      "default": "Call Us"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "(555) 123-4567"
    },
    {
      "type": "text",
      "id": "phone_hours",
      "label": "Phone Hours",
      "default": "Mon-Fri: 9AM - 6PM EST"
    },
    {
      "type": "header",
      "content": "Email Us"
    },
    {
      "type": "text",
      "id": "email_title",
      "label": "Email Title",
      "default": "Email Us"
    },
    {
      "type": "text",
      "id": "email_address",
      "label": "Email Address",
      "default": "hello@newgame.com"
    },
    {
      "type": "text",
      "id": "email_response",
      "label": "Response Time",
      "default": "We'll respond within 24 hours"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta_button",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Contact Us Today"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "About Contact"
    }
  ]
}
{% endschema %}