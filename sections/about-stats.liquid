      "label": "Number",
      "default": "50,000+"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Label",
      "default": "Happy Customers"
    },
    {
      "type": "header",
      "content": "Stat 2"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "label": "Number",
      "default": "2,500+"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Label",
      "default": "Games Available"
    },
    {
      "type": "header",
      "content": "Stat 3"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "label": "Number",
      "default": "500+"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Label",
      "default": "Events Hosted"
    },
    {
      "type": "header",
      "content": "Stat 4"
    },
    {
      "type": "text",
      "id": "stat_4_number",
      "label": "Number",
      "default": "15+"
    },
    {
      "type": "text",
      "id": "stat_4_label",
      "label": "Label",
      "default": "Years Experience"
    }
  ],
