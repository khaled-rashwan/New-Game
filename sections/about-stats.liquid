      <div class="stat-number">{{ section.settings.stat_1_number }}</div>
      <div class="stat-label">{{ section.settings.stat_1_label }}</div>
    </div>

    <div class="stat-item">
      <div class="stat-icon">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
      </div>
      <div class="stat-number">{{ section.settings.stat_2_number }}</div>
      <div class="stat-label">{{ section.settings.stat_2_label }}</div>
    </div>

    <div class="stat-item">
      <div class="stat-icon">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#8b5cf6" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </div>
      <div class="stat-number">{{ section.settings.stat_3_number }}</div>
      <div class="stat-label">{{ section.settings.stat_3_label }}</div>
    </div>

    <div class="stat-item">
      <div class="stat-icon">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
      </div>
      <div class="stat-number">{{ section.settings.stat_4_number }}</div>
      <div class="stat-label">{{ section.settings.stat_4_label }}</div>
    </div>
  </div>
</div>

<style>
.about-stats {
  background: white;
  padding: 60px 24px;
  margin-top: -40px;
  position: relative;
  z-index: 1;
}

.stats-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40px;
  background: white;
  padding: 40px;
  border-radius: 16px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
}

.stat-icon {
  width: 64px;
  height: 64px;
  margin: 0 auto 16px;
  background: #f9fafb;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: 36px;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 14px;
  color: #6b7280;
  font-weight: 500;
}

@media (max-width: 992px) {
  .stats-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
}

@media (max-width: 576px) {
  .about-stats {
    padding: 40px 16px;
  }
  
  .stats-container {
    grid-template-columns: 1fr;
    gap: 24px;
    padding: 24px;
  }
  
  .stat-number {
    font-size: 28px;
  }
}
</style>

