{{ 'section-trust-badges.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .trust-badges-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  .trust-badges-{{ section.id }} .trust-badge__title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
  }

  .trust-badges-{{ section.id }} .trust-badge__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
  }

  .trust-badges-{{ section.id }} .trust-badge__icon {
    color: {{ section.settings.icon_color }};
    font-size: {{ section.settings.icon_size }}px;
  }
{%- endstyle -%}

<section class="trust-badges trust-badges-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="trust-badges__grid">
      {%- for block in section.blocks -%}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="trust-badge__icon">
              {{ block.settings.icon }}
            </div>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <h3 class="trust-badge__title">
              {{ block.settings.title }}
            </h3>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <p class="trust-badge__text">
              {{ block.settings.text }}
            </p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

