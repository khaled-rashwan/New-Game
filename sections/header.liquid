<style>
  header-drawer {
    justify-self: end;
    margin-left: 0;
    margin-right: -1.2rem;
  }

  .header__heading-logo {
    max-width: {{ section.settings.logo_width }}px;
  }

  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
    position: relative;
    transition: color 0.2s ease;
  }

  /* Navigation hover effect with bottom border animation */
  .header__menu-item {
    position: relative;
    font-weight: 500;
    font-size: 1.5rem;
    padding: 2.4rem 1.6rem;
    margin: 0 0.4rem; /* 24-32px spacing between items */
    transition: color 0.2s ease;
  }

  .header__menu-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0.2rem;
    background-color: #FF6600;
    transition: width 0.3s ease;
  }

  .header__menu-item:hover {
    color: #FF6600;
  }

  .header__menu-item:hover::after {
    width: 80%;
  }

  /* List menu items spacing */
  .list-menu--inline .list-menu__item {
    margin: 0 1.2rem; /* 24px spacing */
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  /* Enhanced Header Styles */
  .header__inline-search {
    position: relative;
    flex-grow: 1;
    max-width: 28rem; /* 280px specification */
  }

  .header__inline-search .search {
    width: 100%;
  }

  .header__inline-search .field {
    margin-bottom: 0;
  }

  .header__inline-search .field__input {
    padding: 1rem 4rem 1rem 4rem; /* Space for icon on left */
    border-radius: 0.6rem;
    border: 0.1rem solid #E5E5E5; /* Specification color */
    background-color: #ffffff;
    font-size: 1.4rem;
    height: 4rem; /* 40px specification */
    transition: border-color 0.2s ease;
  }

  .header__inline-search .field__input:focus {
    border-color: #FF6600; /* Specification color on focus */
    background-color: #ffffff;
    outline: none;
  }

  .header__inline-search .field__input::placeholder {
    color: rgba(26, 26, 26, 0.5);
  }

  .header__inline-search .search__button {
    position: absolute;
    left: 1rem; /* Icon on left side per specification */
    top: 50%;
    transform: translateY(-50%);
    padding: 0.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: rgba(26, 26, 26, 0.5);
  }

  .header__inline-search .search__button .icon {
    width: 1.8rem;
    height: 1.8rem;
  }
  }

  .header__login-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.login_button_padding_top_bottom | default: 8 }}px {{ section.settings.login_button_padding_left_right | default: 18 }}px;
    background-color: {{ section.settings.login_button_bg_color | default: '#1A1A1A' }};
    color: {{ section.settings.login_button_text_color | default: '#FFFFFF' }};
    text-decoration: none;
    border-radius: {{ section.settings.login_button_border_radius | default: 8 }}px;
    font-weight: 500;
    font-size: 1.4rem; /* 14px */
    white-space: nowrap;
    margin-left: {{ section.settings.login_button_margin_left | default: 15 }}px;
    transition: background-color 0.3s ease-in-out;
    border: {{ section.settings.login_button_border_width | default: '0px' }} solid {{ section.settings.login_button_border_color | default: '#1A1A1A' }};
  }

  .header__login-button:hover {
    background-color: {{ section.settings.login_button_hover_bg_color | default: '#FF6600' }};
    color: {{ section.settings.login_button_text_color | default: '#FFFFFF' }};
  }

  /* Header Icons - Wishlist & Cart */
  .header__action-icons {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    margin-left: 1.5rem;
  }

  .header__icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    color: {{ section.settings.icon_color | default: '#1A1A1A' }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .header__icon-link:hover {
    color: {{ section.settings.icon_hover_color | default: '#FF6600' }};
  }

  .header__icon-link .icon {
    width: {{ section.settings.icon_size | default: 22 }}px;
    height: {{ section.settings.icon_size | default: 22 }}px;
  }

  .header__icon-link--cart {
    position: relative;
  }

  .header__cart-badge {
    position: absolute;
    top: 0.2rem;
    right: 0.2rem;
    min-width: 1.8rem;
    height: 1.8rem;
    padding: 0 0.4rem;
    background-color: {{ section.settings.cart_badge_bg_color | default: '#E74C3C' }};
    color: {{ section.settings.cart_badge_text_color | default: '#FFFFFF' }};
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  /* User Dropdown Menu */
  .header__user-dropdown {
    position: relative;
    margin-left: 1.5rem;
  }

  .header__user-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem 1.2rem;
    background: {{ section.settings.user_dropdown_bg_color | default: 'transparent' }};
    border: 0.1rem solid {{ section.settings.user_dropdown_border_color | default: 'rgba(26, 26, 26, 0.15)' }};
    border-radius: {{ section.settings.user_dropdown_border_radius | default: 5 }}px;
    color: {{ section.settings.user_dropdown_text_color | default: '#1A1A1A' }};
    font-weight: 500;
    font-size: 1.4rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .header__user-toggle:hover {
    border-color: {{ section.settings.user_dropdown_hover_color | default: '#FF6600' }};
    color: {{ section.settings.user_dropdown_hover_color | default: '#FF6600' }};
  }

  .header__user-avatar {
    width: 2.8rem;
    height: 2.8rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF6600 50%, #4A90E2 50%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-weight: 600;
    font-size: 1.2rem;
  }

  .header__user-dropdown-menu {
    position: absolute;
    top: calc(100% + 0.8rem);
    right: 0;
    min-width: 18rem;
    background: {{ section.settings.user_dropdown_bg_color | default: '#ffffff' }};
    border-radius: 0.8rem;
    box-shadow: 0 0.4rem 1.2rem rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-0.8rem);
    transition: all 0.2s ease;
    z-index: 100;
  }

  .header__user-dropdown.active .header__user-dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .header__user-dropdown-menu ul {
    list-style: none;
    margin: 0;
    padding: 0.8rem 0;
  }

  .header__user-dropdown-menu li {
    margin: 0;
  }

  .header__user-dropdown-menu a {
    display: block;
    padding: 1rem 1.6rem;
    color: {{ section.settings.user_dropdown_text_color | default: '#1A1A1A' }};
    text-decoration: none;
    font-size: 1.4rem;
    transition: all 0.2s ease;
  }

  .header__user-dropdown-menu a:hover {
    background-color: rgba(255, 102, 0, 0.08);
    color: {{ section.settings.user_dropdown_hover_color | default: '#FF6600' }};
  }

  @media screen and (min-width: 990px) {
    .header__right-section {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .header--enhanced .header__inline-menu {
      justify-self: center;
      margin-top: 0;
    }

    .header__icons .header__icon--account,
    .header__icons .header__icon--cart {
      display: none;
    }

    .header__right-section .header__icon--account,
    .header__right-section .header__icon--cart {
      display: none;
    }
  }

  @media screen and (max-width: 989px) {
    .header__inline-search {
      max-width: 100%;
      margin: 1rem 0 0 0;
    }

    .header__inline-search .field__input {
      padding: 1.2rem 4rem 1.2rem 1.5rem;
    }

    .header__login-button {
      width: 100%;
      margin: 1rem 0 0 0;
      padding: 1.4rem 2rem;
    }

    .header__mobile-bottom {
      display: flex;
      flex-direction: column;
      width: 100%;
      grid-column: 1 / -1;
      padding-bottom: 1rem;
    }

    .header__action-icons {
      display: flex;
      gap: 0.5rem;
      margin-left: 0.5rem;
    }

    .header__user-dropdown {
      margin-left: 0.5rem;
    }

    .header__user-toggle {
      padding: 0.6rem 1rem;
      font-size: 1.3rem;
    }

    .header__user-avatar {
      width: 2.4rem;
      height: 2.4rem;
      font-size: 1.1rem;
    }
  }
</style>

