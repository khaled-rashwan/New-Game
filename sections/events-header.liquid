{% comment %}
  Events Page - Header Section
  Save as: sections/events-header.liquid
{% endcomment %}

<div class="events-header">
  <div class="header-container">
    <h1 class="events-title">{{ section.settings.title }}</h1>
    <p class="events-subtitle">{{ section.settings.subtitle }}</p>
  </div>
</div>

<style>
.events-header {
  background: #faf9f7;
  padding: 80px 24px 60px;
  text-align: center;
}

.header-container {
  max-width: 900px;
  margin: 0 auto;
}

.events-title {
  font-size: 42px;
  font-weight: 700;
  color: #111827;
  margin: 0 0 16px 0;
  letter-spacing: -0.5px;
}

.events-subtitle {
  font-size: 18px;
  color: #6b7280;
  line-height: 1.7;
  margin: 0;
}

@media (max-width: 768px) {
  .events-header {
    padding: 60px 20px 40px;
  }
  
  .events-title {
    font-size: 32px;
  }
  
  .events-subtitle {
    font-size: 16px;
  }
}
</style>

{% schema %}
{
  "name": "Events Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NewGame Events"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Join our community events, tournaments, and workshops. From casual family nights to competitive championships!"
    }
  ],
  "presets": [
    {
      "name": "Events Header"
    }
  ]
}
{% endschema %}