{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonials-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  .testimonials-{{ section.id }} .testimonials__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .testimonials-{{ section.id }} .testimonials__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }
  }

  .testimonials-{{ section.id }} .testimonials__subheading {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
  }

  .testimonials-{{ section.id }} .testimonial-card {
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
  }

  .testimonials-{{ section.id }} .testimonial-card__stars {
    color: {{ section.settings.stars_color }};
  }

  .testimonials-{{ section.id }} .testimonial-card__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
  }

  .testimonials-{{ section.id }} .testimonial-card__author {
    color: {{ section.settings.author_color }};
    font-size: {{ section.settings.author_size }}px;
  }

  .testimonials-{{ section.id }} .testimonial-card__location {
    color: {{ section.settings.location_color }};
    font-size: {{ section.settings.location_size }}px;
  }
{%- endstyle -%}

<section class="testimonials testimonials-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="testimonials__heading">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <p class="testimonials__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}
    
    <div class="testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          {%- if block.settings.rating > 0 -%}
            <div class="testimonial-card__stars">
              {%- for i in (1..block.settings.rating) -%}
                ‚≠ê
              {%- endfor -%}
            </div>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <p class="testimonial-card__text">
              "{{ block.settings.text }}"
            </p>
          {%- endif -%}
          <div class="testimonial-card__author-info">
            {%- if block.settings.author != blank -%}
              <p class="testimonial-card__author">
                {{ block.settings.author }}
              </p>
            {%- endif -%}
            {%- if block.settings.location != blank -%}
              <p class="testimonial-card__location">
                {{ block.settings.location }}
              </p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

