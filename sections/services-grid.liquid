{{ 'section-services-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .services-grid-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  .services-grid-{{ section.id }} .services-grid__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .services-grid-{{ section.id }} .services-grid__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }
  }

  .services-grid-{{ section.id }} .services-grid__description {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
  }

  .services-grid-{{ section.id }} .service-card {
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
  }

  .services-grid-{{ section.id }} .service-card__icon {
    color: {{ section.settings.icon_color }};
    font-size: {{ section.settings.icon_size }}px;
  }

  .services-grid-{{ section.id }} .service-card__title {
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_size }}px;
  }

  .services-grid-{{ section.id }} .service-card__text {
    color: {{ section.settings.card_text_color }};
    font-size: {{ section.settings.card_text_size }}px;
  }

  .services-grid-{{ section.id }} .service-card__button {
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_text_size }}px;
  }
{%- endstyle -%}

<section class="services-grid services-grid-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="services-grid__heading">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    
    {%- if section.settings.description != blank -%}
      <p class="services-grid__description">
        {{ section.settings.description }}
      </p>
    {%- endif -%}
    
    <div class="services-grid__cards">
      {%- for block in section.blocks -%}
        <div class="service-card" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="service-card__icon">
              {{ block.settings.icon }}
            </div>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <h3 class="service-card__title">
              {{ block.settings.title }}
            </h3>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <p class="service-card__text">
              {{ block.settings.text }}
            </p>
          {%- endif -%}
          {%- if block.settings.button_label != blank -%}
            <a href="{{ block.settings.button_link }}" class="service-card__button">
              {{ block.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

